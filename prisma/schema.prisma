generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  createdAt   DateTime     @default(now())
  password    String
  role        Role         @default(USER)
  phone       String?      @unique
  cartItems   CartItem[]
  deliveryMan DeliveryMan?
  orders      Orders[]
  vendor      Vendor?
  addresses   Address[]
}

model Vendor {
  id             Int        @id @default(autoincrement())
  userId         Int        @unique
  restaurantName String
  restaurantId   String     @unique
  imageUrl       String?
  priceRange     Float?
  rating         Float      @default(0)
  addressId      Int        @unique
  orders         Orders[]
  address        Address    @relation(fields: [addressId], references: [id])
  user           User       @relation(fields: [userId], references: [id])
  menuItems      menuItem[]
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  city      String
  state     String
  zipCode   String
  phone     String
  userId    Int
  latitude  Float?
  longitude Float?
  orders    Orders[]
  vendor    Vendor?
  user      User     @relation(fields: [userId], references: [id])

  @@map("addresses")
}

model Orders {
  id            Int          @id @default(autoincrement())
  userId        Int
  vendorId      Int
  deliveryManId Int?
  status        OrderStatus  @default(PENDING)
  amount        Float
  createdAt     DateTime     @default(now())
  addressId     Int
  items         OrderItem[]
  address       Address      @relation(fields: [addressId], references: [id])
  deliveryMan   DeliveryMan? @relation(fields: [deliveryManId], references: [id])
  user          User         @relation(fields: [userId], references: [id])
  vendor        Vendor       @relation(fields: [vendorId], references: [id])
  payment       Payment?
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  quantity   Int
  price      Float
  orderId    Int
  menuItemId Int
  menuItem   menuItem @relation(fields: [menuItemId], references: [id])
  order      Orders   @relation(fields: [orderId], references: [id])
}

model DeliveryMan {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  isAvailable   Boolean  @default(true)
  vehicleType   String?
  vehicleNumber String?
  latitude      Float?
  longitude     Float?
  user          User     @relation(fields: [userId], references: [id])
  orders        Orders[]
}

model menuItem {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Float
  vendorId    Int
  imageUrl    String?
  category    String?
  isAvailable Boolean     @default(true)
  reviews     Float?      @default(0)
  cartItem    CartItem[]
  ordersItems OrderItem[]
  vendor      Vendor      @relation(fields: [vendorId], references: [id])
}

model Payment {
  id        Int           @id @default(autoincrement())
  orderId   Int           @unique
  amount    Float
  status    PaymentStatus @default(PENDING)
  createdAt DateTime      @default(now())
  order     Orders        @relation(fields: [orderId], references: [id])
}

model CartItem {
  id         Int      @id @default(autoincrement())
  quantity   Int
  userId     Int
  menuItemId Int
  menuItem   menuItem @relation(fields: [menuItemId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, menuItemId])
}

enum Role {
  USER
  ADMIN
  DELIVERY
  VENDOR
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
  CANCELLED
  OUT_FOR_DELIVERY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
